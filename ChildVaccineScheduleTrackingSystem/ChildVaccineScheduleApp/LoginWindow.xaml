<Window x:Class="ChildVaccineScheduleApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChildVaccineScheduleApp"
        mc:Ignorable="d"
        Title="Login Window" Height="400" Width="700" Background="#FFF2F184" FontSize="13" FontFamily="Tahoma" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Login" FontSize="24" FontWeight="Bold" TextAlignment="Center" Margin="0,0,0,20" Foreground="Blue"/>

            <TextBlock Text="Email"/>
            <TextBox x:Name="EmailTextBox" Height="30" TextAlignment="Left" KeyDown="TextBox_KeyDown"/>

            <TextBlock Text="Password" Margin="0,10,0,0"/>
            <TextBox x:Name="PasswordTextBox" Height="30" TextAlignment="Left" KeyDown="TextBox_KeyDown"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button Content="Login" Width="100" Margin="5" Click="LoginButton_Click"/>
                <Button Content="Quit" Width="100" Margin="5" Click="QuitButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
